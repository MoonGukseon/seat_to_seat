
<div class="row">
    <button id="placeOrPerfo" value="p" style="display: none;"></button>
    <% @place.zip(@perfo.each).each do |x, f| %>
        <div class="col-md-4 col-sm-4">
            <div class="thumbnail">
                <a href="/perfoInfo/<%= f.id %>">
                    <% if x.image.blank? %>
                        <img src="http://placehold.it/300x200" alt="">
                    <% else %>
                        <img src="<%= f.perfo_img %>" width="300" height="200" alt="">
                    <% end %>
                    <div class="caption">
                        <%= f.perfo_name %><br>
                        <%= x.region %> <%= x.place_name %>
                    </div>
                </a>
            </div>
        </div>
     <% end %>
</div>
